<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cell_image_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <ImageView
      android:id="@+id/image_to_expand_in_detail"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:adjustViewBounds="true"
      android:scaleType="centerCrop"
      android:transitionName="thumbnail"
      />

  <ImageView
      android:id="@+id/cell_image_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:adjustViewBounds="true"
      android:scaleType="centerCrop"
      />
  <ImageView
      android:id="@+id/cell_image_view_overlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:adjustViewBounds="true"
      android:scaleType="centerCrop"
      android:src="@drawable/oc_read_articles_overlay"
      android:visibility="gone"
      tools:visibility="visible"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/cell_selection"
      />

  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      >
    <include layout="@layout/progress_red"/>
  </FrameLayout>
</FrameLayout>