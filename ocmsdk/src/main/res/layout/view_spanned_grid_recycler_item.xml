<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.gigigo.multiplegridrecyclerview.MultipleGridRecyclerView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/multipleGridRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:blank_background_color="@color/oc_background_grid_color"
      app:divider_color="@android:color/white"
      app:divider_size="1dp"
      />

  <TextView
      android:id="@+id/textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="@color/white"
      android:text="0"
      android:textColor="@color/black"
      />

</FrameLayout>