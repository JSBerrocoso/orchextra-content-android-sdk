<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.gigigo.multiplegridrecyclerview.MultipleGridRecyclerView
      android:id="@+id/multiple_grid_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:blank_background_color="@color/oc_background_grid_color"
      app:divider_color="@android:color/white"
      app:divider_size="1dp"
      />

  <include
      layout="@layout/ocm_retry_content_item"
      android:id="@+id/ocm_error_layout"
      android:visibility="gone"
      />

  <include
      layout="@layout/ocm_more_content_item"
      android:id="@+id/ocm_empty_layout"
      android:visibility="gone"
      />

</FrameLayout>
