<resources>

  <style name="OcmAppTheme" parent="OcmMainAppTheme"/>

  <!-- Base application theme. -->
  <style name="OcmMainAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <!--   your app branding color for the app bar -->
    <item name="colorPrimary">@android:color/transparent</item>

    <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
  </style>

  <style name="OcmAppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="TextAppearanceDialogMessage" parent="@android:style/TextAppearance.Holo.Medium">
    <item name="android:textStyle">italic</item>
    <item name="android:textSize">14sp</item>
    <item name="android:scrollbars">none</item>
  </style>

  <!--need it for custom text of the buttons in applivery-->
  <style name="AlertDialogTheme">
    <item name="colorAccent">@color/black</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textColorPrimary">@color/black</item>

    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:windowFullscreen">true</item>

    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowBackground">@color/oc_bg_dialog_applivery_color</item>
    <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
    <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    <item name="android:textAppearanceMedium">@style/TextAppearanceDialogMessage</item>
  </style>

  <style name="DetailSwipeBackOcmAppTheme" parent="OcmAppTheme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="OxAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/ox_primary</item>
    <item name="colorPrimaryDark">@color/ox_primary_dark</item>
    <item name="colorAccent">@color/ox_accent</item>
  </style>

  <style name="OxAppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/ox_primary</item>
    <item name="colorPrimaryDark">@color/ox_primary_dark</item>
    <item name="colorAccent">@color/ox_accent</item>
  </style>

  <style name="OxAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="OxAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
